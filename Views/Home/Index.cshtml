@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section id="home" class="text-center p-20 sm:p-28 md:p-60 shadow-lg bg-cover bg-center bg-no-repeat" style="background-image: url('/images/bg.jpg');">
    <div class="bg-black bg-opacity-50 p-6 rounded-lg">
        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-4">PrimeStock Enterprises</h1>
        <p class="text-lg sm:text-xl font-semibold text-white mb-6">Empowering businesses through efficient inventory and warehouse management solutions.</p>
        <a href="#about" class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 px-6 rounded-full transition duration-300">Explore Features</a>
    </div>
</section>

<!-- About Section -->
<section id="about" class="text-center py-12 bg-gray-100 rounded-lg shadow-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-4">About Our Inventory & Warehouse System</h2>
    <p class="text-lg text-gray-600 mx-4 font-semibold md:mx-20 mb-4">
        PrimeStock is a comprehensive inventory and warehouse management solution built to simplify and centralize your stock control processes. Our system offers real-time tracking of inventory levels, automated stock updates, and seamless warehouse coordination to ensure you never run out—or overstock.
    </p>
    <p class="text-lg text-gray-600 mx-4 font-semibold md:mx-20 mb-4">
        Whether you're managing a single storage facility or multiple distribution centers, PrimeStock delivers synchronized oversight with features like multi-location inventory, reorder point alerts, expiration date tracking, and batch/serial number monitoring.
    </p>
    <p class="text-lg text-gray-600 mx-4 font-semibold md:mx-20 mb-4">
        Integration with barcode and QR code scanners allows for quick item identification and movement tracking across the warehouse floor. Role-based access ensures that only authorized users—warehouse staff, supervisors, procurement teams—can manage relevant tasks, keeping your operations both efficient and secure.
    </p>
    <p class="text-lg text-gray-600 mx-4 font-semibold md:mx-20 mb-4">
        Our system supports procurement planning, inventory forecasting, supplier management, and demand analysis—all backed by detailed reporting dashboards. This allows managers to make data-driven decisions that cut down losses, optimize storage space, and improve order fulfillment accuracy.
    </p>
    <p class="text-lg text-gray-600 mx-4 font-semibold md:mx-20">
        With 24/7 technical support, cloud-based access, and a scalable architecture, PrimeStock grows with your business and adapts to new challenges—making it the go-to solution for modern inventory and warehouse optimization.
    </p>
</section>

<!-- Services Section -->
<section id="service" class="text-center py-12 bg-gray-100 rounded-lg shadow-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-4">Core Features</h2>
    <p class="text-lg text-gray-600 mb-8 mx-4 font-semibold md:mx-20">
        Powerful tools that help manage your inventory lifecycle, optimize storage, and maintain supplier relations—all in one place.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto px-4">
        <!-- Feature 1 -->
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition duration-300">
            <div class="text-indigo-600 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Real-Time Stock Tracking</h3>
            <p class="text-gray-600 font-medium">Monitor inventory levels across multiple locations with live updates and low-stock alerts.</p>
        </div>

        <!-- Feature 2 -->
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition duration-300">
            <div class="text-indigo-600 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-6h13V7l-7-4-6 4v6H3v6h6z" />
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Warehouse Management</h3>
            <p class="text-gray-600 font-medium">Assign products to specific warehouse locations and manage stock transfers efficiently.</p>
        </div>

        <!-- Feature 3 -->
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition duration-300">
            <div class="text-indigo-600 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h8m-8 4h8m-8-8h8" />
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Purchase & Receiving</h3>
            <p class="text-gray-600 font-medium">Create purchase orders, track delivery status, and log received goods directly into your system.</p>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="text-center py-12 bg-gray-100 rounded-lg shadow-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-4">Get in Touch</h2>
    <p class="text-lg text-gray-600 mb-6 mx-4 font-semibold md:mx-20">
        Have a question about inventory optimization, warehouse setup, or system customization? Contact us today—we’d love to help.
    </p>

    <form action="#" method="POST" class="max-w-lg mx-auto space-y-6">
        <!-- Flexbox for form fields -->
        <div class="flex flex-col gap-4 sm:flex-row sm:gap-6">
            <div class="flex flex-col w-full sm:w-1/2">
                <label for="name" class="text-lg text-gray-800 font-semibold">Name</label>
                <input type="text" id="name" name="name" class="px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 w-full" required />
            </div>
            <div class="flex flex-col w-full sm:w-1/2">
                <label for="email" class="text-lg text-gray-800 font-semibold">Email</label>
                <input type="email" id="email" name="email" class="px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 w-full" required />
            </div>
        </div>

        <!-- Message field -->
        <div class="flex flex-col">
            <label for="message" class="text-lg text-gray-800 font-semibold">Message</label>
            <textarea id="message" name="message" rows="4" class="px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 w-full" required></textarea>
        </div>

        <!-- Submit button -->
        <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-full transition duration-300">
            Send Message
        </button>
    </form>
</section>

