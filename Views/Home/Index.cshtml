@{
    ViewData["Title"] = "Home Page";
}

<section id="home" class="text-center p-60 shadow-lg bg-gradient-to-r from-blue-500 to-indigo-600">
    <h1 class="text-4xl font-bold text-gray-100 mb-4">Welcome to Our WebApp!</h1>
    <p class="text-xl font-semibold text-gray-200 mb-6">We offer innovative solutions to help you grow and succeed.</p>
    <a href="#about" class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 px-6 rounded-full transition duration-300">Get Started</a>
</section>

<!-- About Section -->
<section id="about" class="text-center py-12 bg-gray-100 rounded-lg shadow-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-4">About Us</h2>
    <p class="text-lg text-gray-600 mx-4 font-semibold md:mx-20">
        Our platform is built with modern businesses in mind—providing a centralized solution to streamline your daily operations. From task automation to real-time analytics, we empower organizations to focus on what matters most: growth and innovation.
    </p>
    <br>
    <p class="text-lg text-gray-600 mx-4 font-semibold md:mx-20">
        We offer customizable tools that cater to businesses of all sizes. Whether you're managing a small team or a large enterprise, our scalable infrastructure ensures that your system remains fast, responsive, and adaptable to changing needs.
    </p>
    <br>
    <p class="text-lg text-gray-600 mx-4 font-semibold md:mx-20">
        Security is our top priority. We implement industry-leading encryption protocols, regular security audits, and secure data backups to ensure your sensitive information is always protected and compliant with data privacy standards.
    </p>
    <br>
    <p class="text-lg text-gray-600 mx-4 font-semibold md:mx-20">
        Additionally, our platform is supported by a dedicated team of professionals available 24/7. Whether it’s onboarding, technical support, or strategic guidance, we’re here to help you succeed at every step of your journey.
    </p>
</section>

<!-- Services Section -->
<section id="service" class="text-center py-12 bg-gray-100 rounded-lg shadow-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-4">Our Services</h2>
    <p class="text-lg text-gray-600 mb-8 mx-4 font-semibold md:mx-20">
        Discover the wide range of services we offer to meet your business needs and accelerate your success.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto px-4">
        <!-- Service 1 -->
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition duration-300">
            <div class="text-indigo-600 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L5.5 12.75m0 0L9.75 8.5M5.5 12.75H18.25" />
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Automation Tools</h3>
            <p class="text-gray-600 font-medium">Streamline your workflows with powerful automation that saves you time and reduces errors.</p>
        </div>

        <!-- Service 2 -->
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition duration-300">
            <div class="text-indigo-600 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Data Insights</h3>
            <p class="text-gray-600 font-medium">Gain real-time analytics and reports to help you make data-driven decisions faster.</p>
        </div>

        <!-- Service 3 -->
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition duration-300">
            <div class="text-indigo-600 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Secure Hosting</h3>
            <p class="text-gray-600 font-medium">We provide fast, secure, and scalable cloud-based hosting services to keep your business online 24/7.</p>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="text-center py-12 bg-gray-100 rounded-lg shadow-md">
    <h2 class="text-3xl font-bold text-gray-800 mb-4">Contact Us</h2>
    <p class="text-lg text-gray-600 mb-6 mx-4 font-semibold md:mx-20">
        Have questions or want to get in touch? Fill out the form below, and we'll get back to you as soon as possible.
    </p>

    <form action="#" method="POST" class="max-w-lg mx-auto space-y-6">
        <div class="flex flex-col md:flex-row gap-4">
            <div class="flex flex-col md:w-1/2">
                <label for="name" class="text-lg text-gray-800 font-semibold">Name</label>
                <input type="text" id="name" name="name" class="px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            </div>

            <div class="flex flex-col md:w-1/2">
                <label for="email" class="text-lg text-gray-800 font-semibold">Email</label>
                <input type="email" id="email" name="email" class="px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required />
            </div>
        </div>

        <div class="flex flex-col">
            <label for="message" class="text-lg text-gray-800 font-semibold">Message</label>
            <textarea id="message" name="message" rows="4" class="px-4 py-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
        </div>

        <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white font-semibold py-3 px-6 rounded-full transition duration-300">
            Send Message
        </button>
    </form>
</section>
